---
interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/x-icon" href="/favicon.webp" />
    <!-- Primary Meta Tags -->
    <title>9h8x's bio-link</title>
    <meta name="title" content="9h8x's bio-link" />
    <meta
      name="description"
      content="bio-link made by 9h8x using Astro, Tailwind and other technologies."
    />

    <!-- Open Graph / Facebook -->
    <meta property="og:type" content="website" />
    <meta property="og:url" content="https://bio.jns.net.ar/" />
    <meta property="og:title" content="9h8x's bio-link" />
    <meta
      property="og:description"
      content="bio-link made by 9h8x using Astro, Tailwind and other technologies."
    />
    <meta property="og:image" content="https://bio.jns.net.ar/favicon.webp" />

    <!-- Twitter -->
    <meta property="twitter:card" content="summary_large_image" />
    <meta property="twitter:url" content="https://bio.jns.net.ar/" />
    <meta property="twitter:title" content="9h8x's bio-link" />
    <meta
      property="twitter:description"
      content="bio-link made by 9h8x using Astro, Tailwind and other technologies."
    />
    <meta
      property="twitter:image"
      content="https://bio.jns.net.ar/favicon.webp"
    />

    <!-- Meta Tags Generated with https://metatags.io -->
    <meta name="generator" content={Astro.generator} />
  </head>
  <body>
    <slot />
  </body>
</html>

<style is:global>
  :root {
    --accent: 136, 58, 234;
    --accent-light: 224, 204, 250;
    --accent-dark: 49, 10, 101;
  }

  html {
    font-family: system-ui, sans-serif;
    background: #13151a;
    background-size: 224px;
  }

  body {
    margin: 0;
    padding: 0;
  }
</style>
